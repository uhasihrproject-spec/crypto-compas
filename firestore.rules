rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all documents for any request
    match /{document=**} {
      allow read, write: if true;
    }
    
    // Specific rules for linkedAccounts collection (still open for testing)
    match /linkedAccounts/{accountId} {
      allow read, write: if true;
      allow create: if true;
      allow update: if true;
      allow delete: if true;
    }
    
    // Allow access to users collection (for user data)
    match /users/{userId} {
      allow read, write: if true;
    }
  }
}